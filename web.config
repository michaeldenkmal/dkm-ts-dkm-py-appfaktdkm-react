<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <rewrite>
      <rules>
        <!-- React / wouter SPA unter /dkmfaktfe -->
        <rule name="ReactSPA_dkmfaktfe" stopProcessing="true">
          <!-- nur URLs, die mit dkmfaktfe beginnen -->
          <match url="^dkmfaktfe(/.*)?$" />
          <conditions logicalGrouping="MatchAll">
            <!-- wenn keine physische Datei... -->
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <!-- ...und kein physischer Ordner -->
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
          </conditions>
          <!-- index.html relativ vom Site-Root aus -->
          <action type="Rewrite" url="/dkmfaktfe/index.html" />
        </rule>

        <!-- ggf. deine bestehenden Django-/sonstigen Regeln -->
      </rules>
    </rewrite>
  </system.webServer>
</configuration>
